# PSC Hearing Intelligence - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================

# Local development (Docker)
DATABASE_URL=postgresql://psc:psc_dev@localhost:5432/psc_dev

# Azure PostgreSQL (production)
# DATABASE_URL=postgresql://user:pass@server.postgres.database.azure.com:5432/psc?sslmode=require

# =============================================================================
# STORAGE
# =============================================================================

# Storage type: "local" or "azure"
STORAGE_TYPE=local

# Local storage directory
AUDIO_DIR=data/audio

# Azure Blob Storage (if STORAGE_TYPE=azure)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER=audio

# =============================================================================
# WHISPER TRANSCRIPTION
# Priority: Groq > Azure OpenAI > OpenAI
# =============================================================================

# Groq (fastest, cheapest) - https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_WHISPER_MODEL=whisper-large-v3-turbo

# Azure OpenAI Whisper (fallback)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=your_azure_key
# AZURE_OPENAI_API_VERSION=2024-06-01
# AZURE_WHISPER_DEPLOYMENT=whisper

# OpenAI Whisper (fallback)
# OPENAI_API_KEY=sk-your_openai_key
# WHISPER_MODEL=whisper-1

# =============================================================================
# ANALYSIS (GPT-4o-mini)
# =============================================================================

# OpenAI API key for analysis (required for analyze stage)
OPENAI_API_KEY=sk-your_openai_key_here
ANALYSIS_MODEL=gpt-4o-mini

# =============================================================================
# STATE CONFIGURATION
# =============================================================================

# Comma-separated list of active states
ACTIVE_STATES=FL

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Secret key for JWT/sessions (change in production!)
API_SECRET_KEY=dev-secret-change-in-production

# Admin API key for /admin/* endpoints
ADMIN_API_KEY=admin-dev-key

# API server settings
API_HOST=0.0.0.0
API_PORT=8000

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# AZURE DEPLOYMENT (Production)
# =============================================================================

# Azure Container Registry
# ACR_LOGIN_SERVER=pschearing.azurecr.io
# ACR_USERNAME=pschearing
# ACR_PASSWORD=your_acr_password

# Azure Resource Group
# AZURE_RESOURCE_GROUP=psc-hearing-rg
# AZURE_CONTAINER_APP=psc-api
