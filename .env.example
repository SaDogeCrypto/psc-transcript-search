# CanaryScope Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# Database (PostgreSQL with pgvector)
# =============================================================================
# Local development (docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/canaryscope

# Azure PostgreSQL Flexible Server (production)
# DATABASE_URL=postgresql://user:password@canaryscope-db.postgres.database.azure.com:5432/canaryscope?sslmode=require

# =============================================================================
# OpenAI API (for transcription and analysis)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Use Whisper API instead of local
USE_WHISPER_API=false

# =============================================================================
# Supabase Auth (optional - for production authentication)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# Azure Container Registry (for CI/CD)
# =============================================================================
ACR_NAME=canaryscopeacr
ACR_USERNAME=
ACR_PASSWORD=

# =============================================================================
# Email Notifications (Azure Communication Services)
# =============================================================================
# Azure Communication Services (recommended for production)
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-acs.communication.azure.com/;accesskey=...
AZURE_EMAIL_SENDER=DoNotReply@your-domain.azurecomm.net

# Or SMTP (alternative/fallback)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
