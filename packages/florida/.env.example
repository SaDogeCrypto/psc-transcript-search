# Florida PSC Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE (Required)
# =============================================================================

# Local PostgreSQL
# FL_DATABASE_URL=postgresql://localhost/psc_florida

# Azure PostgreSQL Flexible Server
# FL_DATABASE_URL=postgresql://user:password@yourserver.postgres.database.azure.com/florida?sslmode=require

# =============================================================================
# STORAGE (Optional - defaults to local)
# =============================================================================

# Storage backend: 'local' or 'azure'
FL_STORAGE_BACKEND=local

# Local storage path (when FL_STORAGE_BACKEND=local)
FL_LOCAL_STORAGE=data/florida

# Azure Blob Storage (when FL_STORAGE_BACKEND=azure)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
# FL_AZURE_CONTAINER=florida-docs

# =============================================================================
# API RATE LIMITING
# =============================================================================

# Requests per second to Florida PSC APIs
FL_API_RATE_LIMIT=2.0

# Max concurrent document downloads
FL_MAX_CONCURRENT_DOWNLOADS=3
